# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# Production URL
NEXT_PUBLIC_SITE_URL=https://vistafolio.kr

# Korea Investment & Securities (KIS) API
# https://apiportal.koreainvestment.com/ 에서 발급받은 키를 입력하세요
KIS_APPKEY=your_kis_appkey_here
KIS_APPSECRET=your_kis_appsecret_here

# 공공데이터포털 API 키
# https://www.data.go.kr/data/15094775/openapi.do 에서 발급받은 키를 입력하세요
PUBLIC_DATA_API_KEY=your_public_data_api_key_here

# KRX Open API 키
# https://openapi.krx.co.kr/ 에서 발급받은 키를 입력하세요 (승인 후 교체)
KRX_OPEN_API_KEY=your_krx_open_api_key_here

# OpenAI API 키 (필수)
# https://platform.openai.com/api-keys 에서 발급받은 키를 입력하세요
OPENAI_API_KEY=your_openai_api_key_here